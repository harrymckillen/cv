---
import { linkedin } from '../site-info';

interface Props {
  name: string;
  jobtitle: string;
  address: string;
  contact: string;
  linkedin: string;
}

const { name, jobtitle, address, contact } = Astro.props;

const firstName = name.split(' ')[0];
const lastName = name.split(' ')[1];
---

<header>
  <div class="heading">
    <div class="left">
      <h1>{firstName}<br />{lastName}</h1>
    </div>
    <div class="middle">
      <p>{jobtitle}</p>
      <p>{address}</p>
      <p><a href={`mailto:${contact}`}>{contact}</a></p>
      <!-- <p><a href={`${linkedin}`} target="_blank">{linkedin}</a></p> -->
    </div>
    <div class="right">
      <img src="/pfp.jpg" alt={name} />
    </div>
  </div>
</header>

<style lang="scss">
  header {
    background: var(--color-header-bg);
    box-sizing: border-box;
    width: 100%;
    overflow: hidden;

    .heading {
      padding: 2rem 0;
      margin: auto;
      width: 100%;
      max-width: var(--default-width);
      display: flex;
      justify-content: space-between;
      gap: 1rem;
      align-items: center;
      flex-wrap: wrap;
      box-sizing: border-box;

      @media (max-width: 615px) {
        justify-content: center;
      }

      @media (max-width: 467px) {
        .left {
          text-align: center;
        }
      }

      h1 {
        text-transform: uppercase;
        font-weight: 500;
        font-size: 2.5rem;
        margin: 0;
      }

      .right {
        img {
          border-radius: 50%;
          width: 200px;
          height: 200px;
          border: 4px solid white;

          @media screen and (max-width: 768px) {
            border-width: 2px;
            width: 100px;
            height: 100px;
          }
        }
      }
    }
  }
  @media print {
    header {
      .heading {
        margin: 0;
        padding: 2rem 1rem;
        width: 100%;
        max-width: 100%;

        @media (min-width: 768px) {
          justify-content: space-between;
        }

        .right {
          img {
            width: 100px;
            height: 100px;
          }
        }
      }
    }
  }
</style>
