---
interface Props {
  date: string | undefined;
}

let { date } = Astro.props;

const formattedDate = date
  ? new Date(date).toLocaleDateString('en-ie', {
      year: 'numeric',
      month: 'long',
    })
  : 'Present';
const datetime = date ? new Date(date).toISOString() : new Date().toISOString();
---

<time datetime={datetime}>{formattedDate}</time>
